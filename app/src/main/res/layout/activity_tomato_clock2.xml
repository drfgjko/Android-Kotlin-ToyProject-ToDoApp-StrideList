<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tomato">

    <!-- 添加励志的话 -->
    <TextView
        android:id="@+id/motivation1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="“生活就像海洋，"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:typeface="serif"
         />

    <TextView
        android:id="@+id/motivation2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/motivation1TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="只有意志坚强的人才能达到彼岸。”"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:typeface="serif"
        />

    <!-- countdownTextView -->
    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/motivation2TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <!-- 添加停止按钮 -->
    <Button
        android:id="@+id/stopBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/countdownTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="结束"
        android:background="@drawable/button_gradient"
        android:textColor="@color/white"
        />
</RelativeLayout>
