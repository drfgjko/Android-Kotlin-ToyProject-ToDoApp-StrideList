<resources>
<!-- 针对整个应用程序或某个特定组件的全局样式   -->
    <!-- Base application theme. -->
    <style name="Theme.ToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navigation_bar_color</item>
        <item name="colorPrimaryVariant">@color/brown</item>
        <item name="colorOnPrimary">@color/blue_sky_300</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  定义主题需要:主题继承  -->
    <style name="Theme.App.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   隐藏应用程序的 ActionBar     -->
        <item name="windowActionBar">false</item>
        <!--   隐藏应用程序的标题栏      -->
        <item name="windowNoTitle">true</item>
        <!--  定义OverflowMenuStyle自定义样式      -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <!--  暗色系的AppBar主体  -->
    <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- 弹出框主题   -->
    <style name="Theme.App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <!--   文字颜色   -->
        <item name="android:textColorPrimary">@color/dark_brown</item>
    </style>
    <!--  溢出菜单样式  -->
    <style name="OverflowMenuStyle" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/navigation_bar_color</item>
    </style>

</resources>